<h2><%= h @exercise_group.course_instance.course.name %> <%=h @exercise_group.course_instance.name %></h2>

<h3> <%=h @exercise_group.name %> </h3>

<p><%= link_to "register to this group", registrations_path(:exercise_group_id => @exercise_group.id), :method=>:post %></p>

<h4>Registered to this group:</h4>

<% if @exercise_group.users.any? %>
	<ul>
	<% @exercise_group.users.each do |user| %>
		<li><%= user.username %>
			<% if user == current_user %>
				<%= link_to "unregister", registrations_path(:exercise_group_id=>@exercise_group.id), :method=>:delete %>
			<% end %>
		</li>
	<% end %>
	</ul>
<% else %>
	<p>No registrations</p>
<% end %>

<%= link_to 'Back', course_course_instance_path(@exercise_group.course_instance.course, @exercise_group.course_instance) %>
